<?xml version="1.0" encoding="utf-8"?>	

<launch>
    
  
  <arg name="scene" default="$(find coppeliasim_p3dx_sim)/scene/pioneer3dx_empty_world.ttt" />    
  
  <arg name="headless" default="0" />
 
  
  <node name="coppeliasim_p3dx_sim" pkg="coppeliasim_p3dx_sim" type="coppeliasim_p3dx_sim" args="$(arg scene) $(arg headless)" />



  <arg name="model" default="$(find p3dx_description)/urdf/pioneer3dx.urdf"/>
  <param name="robot_description" textfile="$(arg model)" />
  
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find p3dx_description)/launch/config.rviz" />
  
</launch>
